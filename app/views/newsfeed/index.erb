<div class="container firstNav navbar-collapse">
  <div class="row">
    <div class="hidden-xs hidden-sm col-md-offset-1 col-md-5">
      <a href="/"><img src="/fakebook.jpg" style="height:40px; width:180px; margin:20px" ></a>
    </div>        
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="col-md-2 input-box" >
        <p>이메일</p>
        <%= f.text_field :email %></br>
        <%= f.check_box :remember_me, style:"height:13px; width:13px" %>
        <a>로그인 상태 유지</a>
      </div>  
      <div class="col-md-2 input-box">
        <p>비밀번호</p>
        <%= f.password_field :password %>
        <a><%= link_to "로그인 정보를 잊으셨나요?", new_password_path(:user) %></a>
      </div>  
      <div class="col-md-1">
        <p> </p>
        <%= f.submit '로그인', id:"login" %>
      </div>  
    <% end %>
  </div>
</div>
<div class="container front">
  <div class="row">
    <div class="hidden-xs hidden-sm col-md-offset-1 col-md-5">
      <a href="/newsfeed/main"><h1 style="font-weight:bold">비로그인으로 접속</hi></a>
      <p style="font-size:20px; margin:20px 0">Fakebook에 있는 <%= @user_num %>명의 멋쟁이 사자들과 </br>함께 이야기를 나눠보세요.</p>
      <img src="/fakebookmap.png">
    </div>
    <div class="col-md-5">
      <div class="col-md-12">
        <h1 style="font-weight:bold">가입하기</hi>
        <p style="font-size:20px; margin:20px 0">항상 지금처럼 무료로 즐기실 수 있습니다.</p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="col-md-6">
          <%= f.text_field :lastname, autofocus: true, placeholder:"성", class:"form-control"%></br>
        </div>
        <div class="col-md-6">
          <%= f.text_field :firstname, autofocus: true, placeholder:"이름", class:"form-control"%></br>
        </div>
        <div class="col-md-12">
          <%= f.email_field :email, autofocus: true, placeholder:"이메일", class:"form-control" %> </br>
        </div>
        <div class="col-md-12">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" , placeholder:"새 비밀번호", class:"form-control" %> </br>
        </div>
        <div class="col-md-2">
          <%= f.radio_button :gender, "female" %><a style="color:black; font-size:12px;"> 여성</a>
        </div>
        <div class="col-md-10">
          <%= f.radio_button :gender, "male" %><a style="color:black; font-size:12px;"> 남성</a>
        </div>
        <div class="col-md-6">
          <%= f.submit '가입하기', class:"btn btn-success", style:"width:200px; margin-top:20px;" %>
        </div>
        <div class="col-md-6">
          <p><%= link_to "페이스북으로 로그인", user_omniauth_authorize_path(:facebook), class:"btn btn-primary", style:"width:200px; margin-top:20px;" %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>